<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >
    <ImageButton 
        android:id="@+id/icon_sel"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:src="@drawable/cart_select_bg_selector"
        android:background="@null"
        android:layout_gravity="center_vertical"
        />
    <ImageView 
        android:id="@+id/product_img"
        android:layout_marginLeft="@dimen/pad_lv3"
        android:layout_height="70dp"
        android:layout_width="100dp"
        android:scaleType="fitXY"
        android:src="@drawable/test_cart"/>
    <RelativeLayout 
        android:layout_marginLeft="@dimen/pad_lv3"
        android:layout_height="match_parent"
        android:layout_width="match_parent">
        <TextView 
            android:id="@+id/product_name"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="@dimen/font_title_big"
            android:singleLine="true"
            android:ellipsize="end"
            android:text="意大利烩火烧"/>
        
        <TextView
            android:id="@+id/product_price" 
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="¥ 1888.8"
            android:textColor="@color/red"
            android:textSize="@dimen/font_big"
            android:layout_alignParentBottom="true"/>
        <LinearLayout 
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="@dimen/pad_lv7">
            <ImageButton 
                android:id="@+id/btn_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_cart_add"
                android:layout_gravity="center_vertical"
                android:background="@null"
                android:padding="@dimen/pad_lv4"/>
            <TextView
                android:id="@+id/product_num" 
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="2"
                android:textColor="@color/gray_font"
                android:textSize="@dimen/font_big"
                android:layout_gravity="center"
                android:gravity="center"
                android:minWidth="20dp"
                android:padding="@dimen/pad_lv4"/>
            <ImageButton 
                android:id="@+id/btn_reduce"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_cart_reduce"
                android:layout_gravity="center_vertical"
                android:background="@null"
                android:padding="@dimen/pad_lv4"/>
        </LinearLayout>
        
    </RelativeLayout>
    

</LinearLayout>
