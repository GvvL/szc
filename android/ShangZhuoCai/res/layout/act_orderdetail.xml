<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:fitsSystemWindows="true"
    android:background="@color/black">
   <RelativeLayout 
        android:layout_height="@dimen/nav_bar_hight"
        android:layout_width="match_parent"
        android:paddingLeft="@dimen/pad_lv6"
        android:paddingRight="@dimen/pad_lv6"
        android:background="@color/black">
        <ImageButton
            android:id="@+id/nav_bar_left" 
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@drawable/ic_arrow_left_white"
            android:background="@null"
            android:layout_centerVertical="true"/>
        <TextView 
            android:id="@+id/nav_bar_title"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/order_detail"
            android:textColor="@color/white"
            android:layout_centerInParent="true"
            android:textSize="@dimen/font_big"
            />
    </RelativeLayout>
    <com.aydc.szc.widget.MScrollViewExtend 
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:background="#eee">
        <RelativeLayout 
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            >
            <LinearLayout 
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:background="@color/white">
                <LinearLayout 
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_marginTop="8dp"
                    android:paddingLeft="@dimen/pad_lv8"
            		android:paddingRight="@dimen/pad_lv8"
                    android:orientation="horizontal">
                    <TextView 
	                    android:layout_height="wrap_content"
	                    android:layout_width="0dp"
	                    android:layout_weight="1"
	                    android:layout_gravity="center_vertical"
	                    android:text="全部菜品"/>
                    <TextView 
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="催单"
                        android:textColor="@color/gray_font"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:background="@drawable/act_order_detail_cuidan_bg"/>
                </LinearLayout>
                <View 
                    android:layout_height="0.4dp"
                    android:layout_width="match_parent"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:paddingLeft="@dimen/pad_lv8"
            		android:paddingRight="@dimen/pad_lv8"
                    android:background="#ddd"/>
                <com.aydc.szc.widget.MListView 
                    android:id="@+id/orderdetail_listview"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:paddingLeft="@dimen/pad_lv8"
            		android:paddingRight="@dimen/pad_lv8"
                    android:divider="@null">
                </com.aydc.szc.widget.MListView>
                <LinearLayout 
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingLeft="@dimen/pad_lv8"
            		android:paddingRight="@dimen/pad_lv8"
                    android:orientation="horizontal">
                    <TextView 
	                    android:layout_height="wrap_content"
	                    android:layout_width="0dp"
	                    android:layout_weight="1"
	                    android:textSize="@dimen/font_title"
	                    android:textColor="@color/red"
	                    android:text="优惠券"/>
                    <TextView 
                        android:id="@+id/ordedetail_coupon_price"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:textSize="@dimen/font_title"
                        android:textColor="@color/red"
                        android:text="-¥10"/>
                </LinearLayout>
                <LinearLayout 
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingLeft="@dimen/pad_lv8"
            		android:paddingRight="@dimen/pad_lv8"
                    android:orientation="horizontal">
                    <TextView 
	                    android:layout_height="wrap_content"
	                    android:layout_width="0dp"
	                    android:layout_weight="1"
	                    android:textSize="@dimen/font_title"
	                    android:textColor="@color/gray_font"
	                    android:text="配送费"/>
                    <TextView 
                        android:id="@+id/ordedetail_feight"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:textSize="@dimen/font_title"
                        android:textColor="@color/black"
                        android:text="¥0"/>
                </LinearLayout>
                <View 
                    android:layout_height="0.4dp"
                    android:layout_width="match_parent"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:paddingLeft="@dimen/pad_lv8"
            		android:paddingRight="@dimen/pad_lv8"
                    android:background="#ddd"/>
                <LinearLayout 
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingLeft="@dimen/pad_lv8"
            		android:paddingRight="@dimen/pad_lv8"
                    android:orientation="horizontal">
                    <TextView 
	                    android:layout_height="wrap_content"
	                    android:layout_width="0dp"
	                    android:layout_weight="1"
	                    android:textSize="@dimen/font_title"
	                    android:textColor="#bbb"
	                    android:gravity="right"
	                    android:text="原价"/>
                    <TextView 
                        android:id="@+id/orderdetail_y_price"
                        android:layout_marginLeft="30dp"
                        android:layout_height="wrap_content"
                        android:layout_width="70dp"
                        android:textSize="@dimen/font_title"
                        android:gravity="right"
                        android:textColor="@color/black"
                        android:text="¥2"/>
                </LinearLayout>
                <LinearLayout 
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingLeft="@dimen/pad_lv8"
            		android:paddingRight="@dimen/pad_lv8"
                    android:orientation="horizontal">
                    <TextView 
                        android:id="@+id/orderdetail_status"
	                    android:layout_height="wrap_content"
	                    android:layout_width="0dp"
	                    android:layout_weight="1"
	                    android:textSize="@dimen/font_title"
	                    android:textColor="#bbb"
	                    android:layout_gravity="center_vertical"
	                    android:text="已支付"/>
                    <TextView 
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:textColor="#bbb"
                        android:layout_gravity="center_vertical"
                        android:text="折扣价"/>
                    <TextView 
                        android:id="@+id/orderdetail_price"
                        android:layout_marginLeft="30dp"
                        android:layout_height="wrap_content"
                        android:layout_width="70dp"
                        android:textSize="@dimen/font_title"
                        android:layout_gravity="center_vertical"
                        android:gravity="right"
                        android:textColor="@color/red"
                        android:text="¥2"/>
                </LinearLayout>
               <LinearLayout 
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_marginTop="20dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingLeft="@dimen/pad_lv8"
            		android:paddingRight="@dimen/pad_lv8"
                    android:orientation="horizontal">
                    <TextView 
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:textColor="#bbb"
                        android:layout_gravity="center_vertical"
                        android:text="送餐地址:"/>
                    <TextView 
                        android:id="@+id/orderdetail_address"
                        android:layout_marginLeft="20dp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:textSize="@dimen/font_title"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/gray_font"
                        android:text="潍坊软件园"/>
                </LinearLayout>
               <LinearLayout 
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_marginBottom="15dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingLeft="@dimen/pad_lv8"
            		android:paddingRight="@dimen/pad_lv8"
                    android:orientation="horizontal">
                    <TextView 
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:textColor="#bbb"
                        android:layout_gravity="center_vertical"
                        android:text="手机号码:"/>
                    <TextView 
                        android:id="@+id/orderdetail_tel"
                        android:layout_marginLeft="20dp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:textSize="@dimen/font_title"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/gray_font"
                        android:text="1356247586"/>
                </LinearLayout>


                
            </LinearLayout>
            
            
        </RelativeLayout>
        
    </com.aydc.szc.widget.MScrollViewExtend>
</LinearLayout>
