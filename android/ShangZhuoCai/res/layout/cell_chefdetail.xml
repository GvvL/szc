<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/white_bg" 
    android:paddingTop="8dp">
    <ImageView 
        android:id="@+id/cell_img"
        android:layout_height="180dp"
        android:layout_width="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/test_cart"/>

    <LinearLayout 
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="@color/white"
        android:paddingLeft="4dp"
        android:paddingRight="6dp">
        <LinearLayout 
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/cell_title"
                android:layout_marginTop="4dp" 
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="及时发货的解散"
                android:textSize="@dimen/font_title_big"
                android:singleLine="true"
                android:ellipsize="end"/>
            <LinearLayout 
                android:layout_marginTop="2dp"
                android:layout_marginBottom="5dp"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="horizontal">
                <TextView 
                    android:id="@+id/cell_vipprice"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textColor="@color/red"
                    android:textSize="@dimen/font_title_big"
                    android:text="¥165"/>
                <TextView 
                    android:id="@+id/cell_price"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/gray_font"
                    android:text="¥88"
                    android:textSize="@dimen/font_little"/>
            </LinearLayout>
            
        </LinearLayout>
        <RelativeLayout 
            android:id="@+id/cell_cart_rview"
  	        android:background="@drawable/cart_add_bg"
			android:layout_height="38dp"
			android:layout_width="38dp"
			android:layout_gravity="center_vertical"
			android:clickable="true"
            >
        	<TextView
        	    android:layout_width="wrap_content"
        	    android:layout_height="wrap_content"
        	    	android:id="@+id/cell_cart_view"
			        android:gravity="center"
			        android:layout_centerInParent="true"
			        android:textColor="@drawable/cart_add_color_select"
			        android:text="\ue62b"
			        android:textSize="22sp"
			        android:clickable="true"
					/>
        </RelativeLayout>
        
    </LinearLayout>
    

</LinearLayout>
