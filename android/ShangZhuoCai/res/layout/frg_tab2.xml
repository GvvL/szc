<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_bg" >
    <LinearLayout 
        android:id="@+id/tab2_nav_bar"
        android:layout_height="@dimen/nav_bar_hight"
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:background="@color/black"
        android:orientation="vertical">
        <TextView
            android:id="@+id/nav_bar_title1" 
            android:layout_height="0dp"
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:gravity="center_horizontal|bottom"
            android:textColor="@color/white"
            android:textSize="@dimen/font_big"
            android:text="@string/str_mingcai_recommend_zh"/>
        <TextView 
            android:id="@+id/nav_bar_title2"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:textColor="@color/white"
            android:textSize="@dimen/font_little"
            android:gravity="center_horizontal|top"
            android:text="@string/str_mingcai_recommend_yin"/>
    </LinearLayout>
    <FrameLayout
         android:layout_below="@id/tab2_nav_bar" 
         android:layout_height="match_parent"
         android:layout_width="match_parent"
         android:animateLayoutChanges="false">
        <RelativeLayout 
            android:id="@+id/tab2_rlayout"
            android:layout_height="match_parent"
            android:layout_width="match_parent">
		    <LinearLayout 
		        android:id="@+id/tab2_ll"
		        android:layout_height="@dimen/tab2_condition_bar_hight"
		        android:layout_width="match_parent"
		        android:orientation="horizontal"
		        android:layout_alignParentTop="true"
		        >
		        <Button
		            android:id="@+id/condition_1" 
		            android:layout_height="match_parent"
		            android:layout_width="0dp"
		            android:layout_weight="1"
		            android:text="菜系  Cuisine ▼"
		            android:textSize="@dimen/font_title"
		            android:textColor="@color/white"
		            android:background="@color/red"/>
		        <View 
		            android:layout_height="match_parent"
		            android:layout_width="1dp"
		            android:background="@color/red"
		            android:layout_marginBottom="30dp"/>
		        <Button 
		            android:id="@+id/condition_2"
		            android:layout_height="match_parent"
		            android:layout_width="0dp"
		            android:layout_weight="1"
		            android:textSize="@dimen/font_title"
		            android:textColor="@color/white"
		            android:text="智能排序  Sort ▼"
		            android:background="@color/red"/>
		    </LinearLayout>
		    <android.support.v4.widget.SwipeRefreshLayout
			         android:id="@+id/tab2_refresh"
			         android:layout_below="@id/tab2_ll"
			         android:layout_height="wrap_content"
			         android:layout_width="match_parent"
			         >
				    <android.support.v7.widget.RecyclerView
				        android:id="@+id/tab2_recycleView"
				        android:layout_height="wrap_content"
				        android:layout_width="match_parent"
				        android:layout_marginLeft="@dimen/pad_lv5"
				        android:layout_marginRight="@dimen/pad_lv5"
				        android:scrollbars="none"/>
			</android.support.v4.widget.SwipeRefreshLayout>
			<LinearLayout 
			    android:id="@+id/tab2_stub"
			    android:layout_height="match_parent"
			    android:layout_width="match_parent"
			    android:layout_below="@id/tab2_ll"
			    android:background="@color/black"
			    android:orientation="horizontal">
			    <ListView
			        android:id="@+id/tab2_con_listview1" 
			        android:layout_height="wrap_content"
			        android:layout_width="0dp"
			        android:layout_weight="1"
			        android:background="@color/white"></ListView>
			    <ListView
			        android:id="@+id/tab2_con_listview2" 
			        android:layout_height="wrap_content"
			        android:layout_width="0dp"
			        android:layout_weight="1"
			        android:background="@color/white"></ListView>
			    
			</LinearLayout>
		</RelativeLayout>
		<RelativeLayout 
	         android:id="@+id/tab2_loading_framlayout"
	         android:layout_height="match_parent"
	         android:layout_width="match_parent"
	         android:background="@color/white_bg">
	         
	             <com.aydc.szc.widget.AVLoadingIndicatorView
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_centerInParent="true"
			        app:indicator_color="#999"
			        app:indicator="LineSpinFadeLoader" />
	         
	     </RelativeLayout>
    
	</FrameLayout>
</RelativeLayout>
