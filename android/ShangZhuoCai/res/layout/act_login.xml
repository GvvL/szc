<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:background="@color/black"
    >
     <RelativeLayout 
        android:layout_height="@dimen/nav_bar_hight"
        android:layout_width="match_parent"
        android:paddingLeft="@dimen/pad_lv6"
        android:paddingRight="@dimen/pad_lv6"
        android:background="@color/black">
        <ImageButton 
            android:id="@+id/nav_bar_left"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@drawable/ic_arrow_left_white"
            android:background="@null"
            android:layout_centerVertical="true"/>
        <TextView 
            android:id="@+id/nav_bar_title"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/login_str"
            android:textColor="@color/white"
            android:layout_centerInParent="true"
            android:textSize="@dimen/font_big"
            />
        <TextView
            android:id="@+id/nav_bar_right" 
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:text="注册"
            android:textColor="@color/white"
            android:clickable="true"/>
    </RelativeLayout>
    <LinearLayout 
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:background="@color/white_bg"
        android:orientation="vertical">
		

         <LinearLayout 
             android:layout_marginTop="40dp"
             android:layout_width="match_parent"
             android:layout_height="105dp"
             android:background="@drawable/act_login_without_b_login"
             android:orientation="vertical"
             android:layout_marginLeft="10dp"
             android:layout_marginRight="10dp">
        
	          <EditText 
	            android:id="@+id/edt_username"
	            android:layout_width="match_parent"
	            android:layout_height="50dp"
	            android:hint="手机号"
	            android:typeface="serif"
	         	android:background="@null"
	         	android:layout_marginLeft="15dp"
	         	android:layout_marginRight="15dp"
	         	android:inputType="number"
	         	android:textSize="14sp"
	         	android:textScaleX="1.2"
	         	android:text="18363625201"
	            />
	          <TextView 
	              android:layout_width="match_parent"
	              android:layout_height="1dp"
	              android:background="#ccc"
	              android:layout_marginLeft="15dp"
	              android:layout_marginRight="15dp"/>
	         <EditText
	            android:id="@+id/edt_password" 
	            android:layout_width="match_parent"
	            android:layout_height="50dp"
	            android:hint="密码"
	            android:inputType="textPassword"
	            android:typeface="serif"
	            android:background="@null"
	            android:layout_marginLeft="15dp"
	         	android:layout_marginRight="15dp"
	         	android:textSize="14sp"
	         	android:textScaleX="1.2"
	         	android:text="123456"
	            />
             
          
             
             
         </LinearLayout>
         <RelativeLayout
             android:layout_height="wrap_content"
             android:layout_width="match_parent"
             android:orientation="horizontal"
             android:layout_marginTop="10dp">
             <TextView 
                 android:id="@+id/act_log_btn_forget"
                 android:layout_height="wrap_content"
                 android:layout_width="wrap_content"
                 android:text="忘记密码？"
                 android:layout_marginLeft="15dp"
                 android:layout_alignParentLeft="true"
                 android:textColor="@drawable/act_login_alert_btn_color_selector"
                 android:clickable="true"/>
             <TextView 
                 android:id="@+id/act_log_btn_dong"
                 android:layout_height="wrap_content"
                 android:layout_width="wrap_content"
                 android:text="手机动态登录"
                 android:layout_alignParentRight="true"
                 android:textColor="@drawable/act_login_alert_btn_color_selector"
                 android:layout_marginRight="15dp"
                 android:clickable="true"/>
             
         </RelativeLayout>
          <Button
            android:id="@+id/btn_login" 
            android:layout_marginTop="25dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/act_login_bind_btn_bind_bg_selector"
            android:gravity="center"
            android:text="登录"
            android:textSize="20sp"
            android:textColor="@drawable/act_login_bind_btn_bind_color_selector"
            />
         
  
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/white_bg">
             <LinearLayout 
                 android:layout_height="match_parent"
                 android:layout_width="0dp"
                 android:layout_weight="1"
                 android:orientation="vertical">
                 <ImageView 
                     android:id="@+id/act_log_img_qq"
                     android:layout_height="70dp"
                     android:layout_width="70dp"
           				android:layout_gravity="center_horizontal"
                     android:background="@drawable/umeng_comm_qq_bt"
                     android:clickable="true"/>
                 <TextView
			            android:id="@+id/act_log_btn_qq"
			            android:layout_marginTop="8dp"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:layout_gravity="center_horizontal"
			            android:text="QQ登录"/>
             </LinearLayout>
             <LinearLayout 
                 android:layout_height="match_parent"
                 android:layout_width="0dp"
                 android:layout_weight="1"
                 android:orientation="vertical">
                 <ImageView 
                     android:id="@+id/act_log_img_weixin"
                     android:layout_height="70dp"
                     android:layout_width="70dp"
           				android:layout_gravity="center_horizontal"
                     android:background="@drawable/umeng_comm_wechat_bt"
                     android:clickable="true"/>
                 <TextView
			            android:id="@+id/act_log_btn_weixin"
			            android:layout_marginTop="8dp"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:layout_gravity="center_horizontal"
			            android:text="微信登录"/>
             </LinearLayout>
             <LinearLayout 
                 android:layout_height="match_parent"
                 android:layout_width="0dp"
                 android:layout_weight="1"
                 android:orientation="vertical">
                 <ImageView 
                     android:id="@+id/act_log_img_weibo"
                     android:layout_height="70dp"
                     android:layout_width="70dp"
           				android:layout_gravity="center_horizontal"
                     android:background="@drawable/umeng_comm_sina_bt"
                     android:clickable="true"/>
                 <TextView
			            android:id="@+id/act_log_btn_weibo"
			            android:layout_marginTop="8dp"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:layout_gravity="center_horizontal"
			            android:text="新浪微博"/>
             </LinearLayout>
   
    
    </LinearLayout>
    </LinearLayout>

</LinearLayout>
