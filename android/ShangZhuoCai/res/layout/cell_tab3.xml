<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cell_rl" >
    <ImageView 
        android:id="@+id/chef_bg"
        android:layout_height="180dp"
        android:layout_width="match_parent"
        android:src="@drawable/test_user"
        android:scaleType="fitXY"/>
    <LinearLayout 
        android:layout_height="wrap_content"
        android:minHeight="40dp"
        android:layout_width="match_parent"
        android:layout_alignBottom="@id/chef_bg"
        android:paddingLeft="@dimen/pad_lv8"
        android:paddingRight="@dimen/pad_lv8"
        android:paddingTop="@dimen/pad_lv5"
        android:paddingBottom="@dimen/pad_lv5"
        android:background="#44000000"
        android:orientation="vertical">
        <LinearLayout 
            android:layout_height="30dp"
            android:layout_width="match_parent"
            android:orientation="horizontal">
            <TextView 
                android:id="@+id/cell_chef_type"
                android:layout_height="wrap_content"
                android:layout_width="50dp"
                android:textColor="@color/white"
                android:layout_gravity="center_vertical"
                android:textSize="@dimen/font_title"
                android:layout_marginLeft="@dimen/pad_lv3"
                android:text="鲁菜"/>
            <TextView
                android:id="@+id/cell_chef_rat"
                android:layout_marginLeft="@dimen/pad_lv3" 
                android:layout_height="wrap_content"
                android:layout_width="80dp"
                android:layout_gravity="center_vertical"
                android:textColor="@color/white"
                android:textSize="@dimen/font_title"
                android:text="五星主厨"/>
            <RatingBar
                android:id="@+id/cell_chef_ratingbar"
                android:layout_marginLeft="10dp" 
                android:layout_marginTop="2dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:gravity="center_vertical"
                android:isIndicator="true"
                android:layout_gravity="center_vertical"
                android:numStars="5"
                android:stepSize="0.5"
                android:rating="4.5"
                android:scaleX="1.4"
                android:scaleY="1.4"
                style="@style/roomRatingBar"/>
            <TextView
                android:id="@+id/cell_chef_recommend" 
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="right"
                android:textColor="@color/white"
                android:textSize="@dimen/font_title_big"
                android:text="1003人推荐"/>
        </LinearLayout>
        <TextView 
            android:id="@+id/cell_chef_desc"
            android:layout_height="wrap_content"
            android:maxHeight="40dp"
            android:maxLines="3"
            android:layout_width="match_parent"
            android:textColor="@color/white"
            android:textSize="@dimen/font_little"
            android:ellipsize="end"
            android:lineSpacingExtra="3dp"
            android:text="卡洛斯的积分卡时间大概看,了就爱看啥地方价格卡数据的疯,狂拉升考试大房间卡手机看,国家建设的反馈撒"/>
        
        
    </LinearLayout>
    

</RelativeLayout>
