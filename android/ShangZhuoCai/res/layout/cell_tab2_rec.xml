<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    <ImageView 
        android:id="@+id/food_img"
        android:layout_height="130dp"
        android:layout_width="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/test_food"/>

        <LinearLayout 
            android:layout_below="@id/food_img"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:background="@color/black_bg"
            android:paddingLeft="80dp"
            android:paddingRight="0dp"
            android:paddingBottom="@dimen/pad_lv3">
            <LinearLayout 
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/pad_lv3">
                <TextView
                    android:id="@+id/food_title" 
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content"
                    android:gravity="center_vertical"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_title"
                    android:textStyle="bold"
                    android:text="意式龙套餐"/>
                <TextView 
                    android:id="@+id/dish_food_en"
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/font_little"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:text="Itealian Lobster Cuisine"/>
                <LinearLayout 
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center_vertical">
                    <TextView
                        android:id="@+id/cartbtn_left" 
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="¥38  品鲜"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:clickable="true"
                        android:textColor="@color/white"
                        android:background="@drawable/tab1_cartbtn_bg_selector"/>
                    <TextView 
                        android:id="@+id/cartbtn_right"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="+"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:clickable="true"
                        android:textColor="@color/white"
                        android:background="@color/red"/>
                </LinearLayout>
            </LinearLayout>  
            <TextView 
                android:id="@+id/food_desc"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/pad_lv3"
                android:textSize="@dimen/font_context"
                android:textColor="@color/white"
                android:lineSpacingExtra="2dp"
                android:text="以龙虾、意大利火腿、鸡胸肉作为主要食材，通过简单的烹饪方式，极大保留了菜品的原汁原味，希望带给你一个健康和美味的用餐体验！"/>          
        </LinearLayout>
        <LinearLayout 
            android:layout_height="wrap_content"
            android:layout_width="80dp"
            android:orientation="vertical"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="100dp">
            <com.aydc.szc.widget.MImageView 
                android:id="@+id/chef_headimg"
	            android:layout_height="65dp"
	            android:layout_width="65dp"
	            app:border_width="1dp"
	            android:layout_gravity="center_horizontal"
	            app:border_color="@color/white"
	            android:src="@drawable/test_header"/>
            <TextView
                android:id="@+id/name" 
                android:layout_marginTop="@dimen/pad_lv1"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:gravity="center_horizontal"
                android:textSize="@dimen/font_big"
                android:textColor="@color/white"
                android:text="周树良"/>
            
        </LinearLayout>
        
    

</RelativeLayout>
