<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/act_address_cell_bg_off" 
    android:paddingLeft="@dimen/pad_lv7"
    android:paddingRight="@dimen/pad_lv7"
    android:paddingTop="@dimen/pad_lv5"
    android:paddingBottom="@dimen/pad_lv5"
    android:id="@+id/order_ll">
    <LinearLayout 
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/order_no" 
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:singleLine="true"
            android:textSize="@dimen/font_context"
            android:text="订单号：2215645452512"/>
        <TextView 
            android:id="@+id/order_time"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="15dp"
            android:textSize="@dimen/font_context"
            android:text="2016/04/04 20:00"/>
    </LinearLayout>
    <TextView
        android:id="@+id/order_address"
        android:layout_marginTop="@dimen/pad_lv3" 
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="地址:潍坊市高新区潍坊软件园1107是"/>
   	<LinearLayout
   	    android:layout_marginTop="@dimen/pad_lv3" 
   	    android:layout_height="wrap_content"
   	    android:layout_width="match_parent"
   	    android:orientation="horizontal">
   	    <TextView 
   	        android:id="@+id/order_linkman"
   	        android:layout_height="wrap_content"
   	        android:layout_width="wrap_content"
   	        android:text="柳岩"/>
   	    <TextView 
   	        android:id="@+id/order_linktel"
   	        android:layout_height="wrap_content"
   	        android:layout_width="wrap_content"
   	        android:layout_marginLeft="@dimen/pad_lv3"
   	        android:text="1524545782352"/>
   	</LinearLayout>
   	<LinearLayout 
   	    android:layout_marginTop="@dimen/pad_lv3"
   	    android:layout_height="wrap_content"
   	    android:layout_width="match_parent"
   	    android:orientation="horizontal">

   		<TextView
   		    android:id="@+id/order_btn"
   		    android:layout_width="wrap_content"
   		    android:layout_height="wrap_content"
   		    android:clickable="true"
   		    android:text="去支付"
   		    android:paddingLeft="10dp"
   		    android:paddingRight="10dp"
   		    android:paddingTop="2dp"
   		    android:paddingBottom="2dp"
   		    android:background="@drawable/act_orders_cell_bg_selector"
   		    android:textColor="@color/white"
   		     />

   		<TextView
   		    android:id="@+id/order_status"
   		    android:layout_width="wrap_content"
   		    android:layout_height="wrap_content"
   		    android:layout_marginLeft="@dimen/pad_lv3"
   		    android:text="@string/unpay"
   		     />

   		<TextView
   		    android:id="@+id/order_all_count"
   		    android:layout_width="0dp"
   		    android:layout_weight="1"
   		    android:gravity="right"
   		    android:layout_height="wrap_content"
   		    android:text="X 3" />

   		<TextView
   		    android:id="@+id/order_all_price"
   		    android:layout_marginLeft="@dimen/pad_lv5"
   		    android:layout_width="wrap_content"
   		    android:layout_height="wrap_content"
   		    android:textColor="@color/red"
   		    android:textSize="@dimen/font_title_big"
   		    android:text="¥ 168" />
   	    
   	</LinearLayout>
    

</LinearLayout>
