<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    <ImageView 
        android:id="@+id/food_img"
        android:layout_height="100dp"
        android:layout_width="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/test_food"/>
    <LinearLayout 
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal">
        <ImageView 
            android:id="@+id/food_chefimg"
            android:layout_marginTop="15dp"
            android:layout_height="70dp"
            android:layout_width="70dp"
            android:src="@drawable/test_header"/>
        <LinearLayout 
            android:layout_marginTop="5dp"
            android:layout_marginLeft="@dimen/pad_lv1"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical">
            <LinearLayout 
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/food_title" 
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:paddingTop="10dp"
                    android:textStyle="bold"
                    android:text="意式龙套餐"/>
                <LinearLayout 
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center_vertical">
                    <TextView
                        android:id="@+id/cartbtn_left" 
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="加入购物车"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:clickable="true"
                        android:textColor="@color/white"
                        android:background="@drawable/tab1_cartbtn_bg_selector"/>
                    <TextView 
                        android:id="@+id/cartbtn_right"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="+"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:clickable="true"
                        android:textColor="@color/white"
                        android:background="@color/red"/>
                </LinearLayout>
            </LinearLayout>  
            <TextView 
                android:id="@+id/food_desc"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/pad_lv3"
                android:textSize="@dimen/font_context"
                android:textColor="@color/gray_font"
                android:lineSpacingExtra="2dp"
                android:text="以龙虾、意大利火腿、鸡胸肉作为主要食材，通过简单的烹饪方式，极大保留了菜品的原汁原味，希望带给你一个健康和美味的用餐体验！"/>          
        </LinearLayout>
        
    </LinearLayout>
    

</LinearLayout>
